

<div class="card mb-3" style="height: 200px; background-size: cover; background-position: center;
  background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
  url(<%= @list.image.present? ? @list.image.url : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg' %>);">

  <div class="card-body text-white">
    <h1 class="card-title"><%= @list.name %></h1>
  </div>
</div>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4 mb-4">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <%= link_to "Go to Movie", movie_path(bookmark.movie), class: "btn btn-primary" %>
          <%= link_to "Delete Bookmark", list_bookmark_path(@list, bookmark),
            method: :delete,
            data: { confirm: "Are you sure you want to remove this bookmark?" },
            class: "btn btn-danger mt-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

</ul>
<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
