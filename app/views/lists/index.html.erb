<div>
  <h1>Movie index</h1>
</div>

<div class="container">
  <h2>Lists</h2>
  <ul>
    <% @lists.each do |list| %>
      <li>
        <%= link_to list.name, list_path(list) %>
        <%= link_to "Delete", list_path(list),

                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>

  <p><%= link_to "Create New List", new_list_path, class: "btn btn-primary" %></p>

  <br>
  <h2>Movies</h2>
</div>
